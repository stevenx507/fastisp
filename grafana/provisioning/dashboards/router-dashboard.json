  "panels": [
    {
      "title": "CPU Load",
      "type": "timeseries",
      "datasource": "InfluxDB-Flux",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "CPU Load (%)",
            "axisPlacement": "left",
            "fillOpacity": 10,
            "lineWidth": 1
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 80 }
            ]
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "datasource": "InfluxDB-Flux",
          "query": "from(bucket: \"metrics\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"system_resources\")\n  |> filter(fn: (r) => r._field == \"cpu_load\")\n  |> filter(fn: (r) => r.router_name == \"${router_name}\")\n  |> aggregateWindow(every: v.windowPeriod, fn: mean, createEmpty: false)\n  |> yield(name: \"mean\")",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Memory Usage",
      "type": "timeseries",
      "datasource": "InfluxDB-Flux",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisPlacement": "left",
            "fillOpacity": 15,
            "lineWidth": 1
          },
          "unit": "bytes"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "datasource": "InfluxDB-Flux",
          "query": "from(bucket: \"metrics\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"system_resources\")\n  |> filter(fn: (r) => r._field == \"total_memory\" or r._field == \"free_memory\")\n  |> filter(fn: (r) => r.router_name == \"${router_name}\")\n  |> aggregateWindow(every: v.windowPeriod, fn: mean, createEmpty: false)\n  |> yield(name: \"mean\")",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Interface Traffic - ${interface_name}",
      "type": "timeseries",
      "datasource": "InfluxDB-Flux",
      "fieldConfig": {
        "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"axisPlacement": "left", "fillOpacity": 10, "lineWidth": 1},
            "unit": "bps"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
      "options": {"legend": {"displayMode": "list", "placement": "bottom"}, "tooltip": {"mode": "multi"}},
      "targets": [
        {
          "datasource": "InfluxDB-Flux",
          "query": "from(bucket: \"metrics\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"interface_traffic\")\n  |> filter(fn: (r) => r.router_name == \"${router_name}\")\n  |> filter(fn: (r) => r.interface_name == \"${interface_name}\")\n  |> filter(fn: (r) => r._field == \"rx_bytes\" or r._field == \"tx_bytes\")\n  |> derivative(unit: 1s, nonNegative: true)\n  |> map(fn: (r) => ({ r with _value: r._value * 8.0 }))\n  |> yield(name: \"derivative\")",
          "refId": "A"
        }
      ]
    }
  ],
