# .env.example - Environment variables for ISPFAST application
# Copy this file to .env and fill in the values.
# Variables marked as (REQUIRED for Production) must be set in production environments.

# --- Application Secrets & Keys ---
# A secret key for Flask application. (REQUIRED for Production)
# Use at least 32 characters in production.
SECRET_KEY=your_flask_secret_key_here

# Secret key for JWT (JSON Web Tokens). (REQUIRED for Production)
# Use at least 32 characters in production.
JWT_SECRET_KEY=your_jwt_secret_key_here

# Encryption key for data encryption (e.g., Fernet). (REQUIRED for Production)
# This key MUST remain constant across deployments to avoid data loss.
# In development, the backend can use an internal fallback key if this is omitted,
# but you should still define it explicitly in shared/staging environments.
ENCRYPTION_KEY=your_encryption_key_here

# --- Database Configuration ---
# PostgreSQL connection URL. (REQUIRED for Production)
# Example: postgresql://user:password@host:port/database_name
DATABASE_URL=postgresql://ispmax:password@localhost/ispmax_dev

# --- Redis Configuration ---
# Redis connection URL. (REQUIRED for Production)
# Used for caching, rate limiting storage, and Celery broker/backend.
# Example: redis://:password@host:port/db_number
REDIS_URL=redis://localhost:6379/0

# Optional cache tuning
# CACHE_TYPE: SimpleCache (dev) / RedisCache (prod recommended)
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300

# --- CORS Configuration ---
# Comma-separated list of allowed origins for CORS. (REQUIRED for Production)
# Example: http://localhost:3000,https://your-frontend.com
CORS_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:3000
ALLOW_SELF_SIGNUP=false
ALLOW_GOOGLE_LOGIN=true
VITE_GOOGLE_CLIENT_ID=498576867709-k90gkkme1de4sakkbviosj19fsjisap5.apps.googleusercontent.com
# Multi-tenant por subdominio (opcional, recomendado para produccion)
TENANCY_ROOT_DOMAIN=fastisp.cloud
TENANCY_MASTER_HOST=master.fastisp.cloud
TENANCY_API_HOST=api.fastisp.cloud
TENANCY_EXCLUDED_SUBDOMAINS=api,master,www
TENANCY_ENFORCE_HOST_MATCH=false
# Token temporal para bootstrap del primer platform_admin (dejar vacio luego de usarlo)
PLATFORM_BOOTSTRAP_TOKEN=
# Dias por defecto para fin de trial de nuevos tenants (si billing_status=trial y no se envia fecha)
TENANT_DEFAULT_TRIAL_DAYS=30
# Recuperacion de password (token temporal, en minutos)
PASSWORD_RESET_TOKEN_TTL_MINUTES=30
# Solo para entornos de desarrollo/pruebas: devuelve reset_token en respuesta de /auth/password/forgot
ALLOW_INSECURE_PASSWORD_RESET_TOKEN_RESPONSE=false

# --- MikroTik Credentials ---
# Default username for MikroTik API connections. (REQUIRED for Production)
MIKROTIK_DEFAULT_USERNAME=admin

# Default password for MikroTik API connections. (REQUIRED for Production)
MIKROTIK_DEFAULT_PASSWORD=
# Password rotation controls for admin jobs.
ROTATE_PASSWORDS_DRY_RUN=false
PASSWORD_ROTATION_LENGTH=24

# --- OLT Live Automation (ZTE/Huawei/VSOL) ---
# Optional fallback credentials used for live mode when a device-specific map is not provided.
OLT_DEFAULT_USERNAME=admin
OLT_DEFAULT_PASSWORD=
OLT_DEFAULT_ENABLE_PASSWORD=

# Device credentials map (JSON). Example:
# {
#   "OLT-ZTE-001": {"username":"admin","password":"secret1","enable_password":"enable123"},
#   "OLT-HW-001": {"username":"root","password":"secret2"}
# }
OLT_CREDENTIALS_JSON={}

# Live execution controls
OLT_LIVE_TIMEOUT_SECONDS=6
OLT_COMMAND_DELAY_SECONDS=0.2
OLT_MAX_OUTPUT_CHARS=30000
OLT_STRICT_HOST_KEY=false

# --- API Keys (Optional for development, but often required for features) ---
# Stripe API keys for payment processing
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Twilio credentials for SMS/WhatsApp notifications
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# OpenAI API key for AI features
OPENAI_API_KEY=

# --- ACS / TR-069 ---
# ACS endpoint for reprovision API integration (optional).
ACS_BASE_URL=
ACS_API_KEY=
ACS_DEFAULT_HOST=
ACS_REPROVISION_PATH=/api/v1/tr069/reprovision
ACS_TIMEOUT_SECONDS=8
ACS_VERIFY_TLS=true

# --- Email Configuration ---
# SMTP server settings for sending emails
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@ispmax.com

# --- Logging ---
# Logging level (e.g., INFO, WARNING, ERROR, DEBUG)
LOG_LEVEL=INFO

# --- Backups ---
# Directory where DB/OLT/MikroTik backup files are written.
BACKUP_DIR=/app/backups
# Retention window for automatic prune of old backup files.
BACKUP_RETENTION_DAYS=14
# Optional pg_dump binary path override.
PG_DUMP_PATH=pg_dump

# --- Frontend Configuration ---
# Hostname for the frontend application. Used by Traefik for routing. (REQUIRED for Production)
# Example: your-frontend-domain.com
FRONTEND_HOST=your-frontend-domain.com

# --- Traefik Configuration ---
# Email for Traefik's Let's Encrypt certificate resolver. (REQUIRED for Production)
TRAEFIK_ACME_EMAIL=your-email@example.com

# --- Other (e.g., Grafana, if applicable) ---
# Grafana admin password (if Grafana is part of the deployment)
GRAFANA_PASSWORD=admin
